<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="scara">

  <xacro:arg name="is_ignition" default="true"/>

  <xacro:include filename="$(find scara_description)/urdf/scara_gazebo.xacro"/>
  <xacro:include filename="$(find scara_description)/urdf/scara_ros2_control.xacro"/>

  <!-- variables -->
  <xacro:property name="PI" value="3.14159265359"/>
  <xacro:property name="effort" value="30.0"/>
  <xacro:property name="velocity" value="10.0"/>

  <link name="world"/>

  <link name="base_link"/>

  <link name="servomg996r">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://scara_description/meshes/servomg996r.stl"/>
      </geometry>
      <material name="grey_servo">
        <color rgba="0.6 0.6 0.6 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://scara_description/meshes/servomg996r.stl"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="1e-5" ixy="0" ixz="0" iyy="1e-5" iyz="0" izz="1e-5"/>
    </inertial>
  </link>

  <link name="first_link">
    <visual>
      <origin xyz="0 0.01 0.0475" rpy="3.14159 0 0"/>
      <geometry>
        <mesh filename="package://scara_description/meshes/first_link.stl"/>
      </geometry>
      <material name="light_grey">
        <color rgba="0.7 0.7 0.7 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0.01 0.047" rpy="3.14159 0 0"/>
      <geometry>
        <mesh filename="package://scara_description/meshes/first_link.stl"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="1e-5" ixy="0" ixz="0" iyy="1e-5" iyz="0" izz="1e-5"/>
    </inertial>
  </link>

  <link name="second_link">
    <visual>
      <origin xyz="0.0005 0.07 0.1035" rpy="3.14159 0 0"/>
      <geometry>
        <mesh filename="package://scara_description/meshes/second_link.stl"/>
      </geometry>
      <material name="blue_link">
        <color rgba="0.2 0.2 1.0 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0.0005 0.07 0.1025" rpy="3.14159 0 0"/>
      <geometry>
        <mesh filename="package://scara_description/meshes/second_link.stl"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="1e-5" ixy="0" ixz="0" iyy="1e-5" iyz="0" izz="1e-5"/>
    </inertial>
  </link>

  <link name="actuator">
    <visual>
      <origin xyz="-0.1216 0.0178 -0.0916" rpy="0 0 -1.5708"/>
      <geometry>
        <mesh filename="package://scara_description/meshes/actuator.stl"/>
      </geometry>
      <material name="green_actuator">
        <color rgba="0.5 1.0 0.5 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0.0 -0.0178 0.04" rpy="0 0 -1.5708"/>
      <geometry>
        <cylinder radius="0.005" length="0.12"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="1e-5" ixy="0" ixz="0" iyy="1e-5" iyz="0" izz="1e-5"/>
    </inertial>
  </link>

  <!-- Joints -->
  <joint name="robot_in_world" type="fixed">
    <origin xyz="0 0 0.0" rpy="0 0 0"/>
    <parent link="world"/>
    <child link="base_link"/>
  </joint>

  <joint name="base_to_servo" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="servomg996r"/>
  </joint>

  <joint name="joint1" type="revolute">
    <origin xyz="0 0.01 0.0475" rpy="3.14159 0 0.109"/>
    <parent link="servomg996r"/>
    <child link="first_link"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14" upper="3.14" effort="1" velocity="20"/>
  </joint>

  <joint name="joint2" type="revolute">
    <origin xyz="-0.0005 -0.0598 -0.056" rpy="0 0 0"/>
    <parent link="first_link"/>
    <child link="second_link"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14" upper="3.14" effort="1" velocity="20"/>
  </joint>

  <joint name="slider_actuator" type="prismatic">
    <origin xyz="0.0183 -0.0518 0.0186" rpy="3.14159 0 -1.5708"/>
    <parent link="second_link"/>
    <child link="actuator"/>
    <axis xyz="0 0 1"/>
    <limit lower="0.0" upper="0.1" effort="1" velocity="0.2"/>
  </joint>

</robot>
